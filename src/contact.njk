<div class="form-controls-container">
    <h2 class="contact-page-title">For service, please ring the bell.</h2>
    <form action="#" class="form-controls">
        <div class="flex">
            <div class="input-group">
                <label for="name">Name</label>
                <input type="text" class="form-control">
            </div>
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" class="form-control">
            </div>
        </div>
        <div class="flex">
            <div class="input-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control">
            </div>
            <div class="input-group">
                <label for="upload">Upload Images </label>
                <input type="text" class="form-control">
            </div>
        </div>
        <div class="flex terms">
            <input type="checkbox">
            <label for="checkbox">I agree to the terms and conditions</label>
        </div>
        <input type="submit" value="Send Message" class="submit-button">
    </form>
</div>