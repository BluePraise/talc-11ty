---
layout: base.njk
pagename: projects
pageTitle: Talc's project
---
{%- for item in collections.projects -%}
    {%- if item.data.imageGallery | length > 1 -%}
  <div class="project-container container-xs" data-slider="{{item.data.title}}">
      <div class="project-slider">

          <div class="swiper-wrapper">

            {%- set stopLoop = false -%}
            {%- if not stopLoop -%}
              {%- for image in item.data.imageGallery -%}

                  <div class="swiper-slide">
                      <img src="{{ image }}" alt="{{ item.data.title }}" data-image="{{ loop.index }}">
                  </div>

                  {%- if loop.last -%}
                      {%- set stopLoop = true -%}
                  {%- endif -%}
              {%- endfor -%}
            {%- endif -%}

          </div>

        <!-- navigation buttons -->
        <div class="swiper-nav swiper-prev"></div>
        <div class="swiper-nav swiper-next"></div>
    </div>


    <div class="project-info">
      <h2 class="project-title">{{item.data.title}}</h2>
      <p class="project-description">{{item.data.description}}</p>
    </div>
</div>
  {%- endif -%}

{%- endfor -%}